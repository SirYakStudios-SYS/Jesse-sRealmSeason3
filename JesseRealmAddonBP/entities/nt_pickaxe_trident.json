{
  "format_version": "1.13.0",
  "minecraft:entity": {
    "description": {
      "identifier": "new:nt_pickaxe_trident",
      "is_spawnable": false,
      "is_summonable": true,
      "is_experimental": false,
      "runtime_identifier": "minecraft:snowball"
    },
    "component_groups": {
      "entity_despawn": {
        "minecraft:despawn":{}
      },
      "entity_sensor": {
        "minecraft:entity_sensor": {
          "sensor_range": 1.5,
          "event_filters": {
            "test": "is_family",
            "subject": "other",
            "value": "player"
          },
          "event": "new:item_spawn"
        }
      }
    },
    "components": {
      "minecraft:collision_box": {
        "width": 0.5,
        "height": 0.5
      },
      "minecraft:projectile": {
        "on_hit": {
          "definition_event": {
            "affect_projectile": true,
            "event_trigger": {
              "event": "new:entity_sensor",
              "target": "self"
            }
          },
          "impact_damage": {
            "damage": 11,
            "knockback": true,
            "semi_random_diff_damage": false,
            "destroy_on_hit": false
          },
          "stick_in_ground": {
            "shake_time" : 0
          }
        },
        "liquid_inertia": 0.99,
        "hit_sound": "item.trident.hit",
        "hit_ground_sound": "item.trident.hit_ground",
        "power": 4,
        "gravity": 0.10,
        "uncertainty_base": 1,
        "uncertainty_multiplier": 0,
        "stop_on_hurt": true,
        "anchor": 1,
        "should_bounce": true,
        "multiple_targets": false,
        "offset": [ 0, -0.1, 0 ]
      },
      "minecraft:physics": {
      },
      "minecraft:environment_sensor":{
        "triggers":[
          {
            "filters":{
              "all_of":[
                {
                  "test": "on_ground",
                  "subject": "self",
                  "operator": "==",
                  "value": true
                }
              ]
            },
            "event": "new:pickaxe"
          }
        ]
      },
      "minecraft:pushable": {
        "is_pushable": false,
        "is_pushable_by_piston": true
      },
      "minecraft:follow_range": {
        "value": 64
      }
    },
    "events": {
      "new:entity_sensor": {
        "add": {
          "component_groups": [
            "entity_sensor"
          ]
        }
      },
      "new:pickaxe": {
        "run_command":{
          "command":[
            "execute @s[tag=!desactive] ~~~ function diamond",
            "execute @s[tag=!desactive] ~~~ function diamond2",
            "execute @s[tag=!desactive] ~~~ function diamond3",
            "tag @s add desactive"
          ]
        }
      },
      "new:item_spawn": {
        "add": {
          "component_groups": [
            "entity_despawn"
          ]
        },
        "run_command":{
          "command":[
            "give @p new:netherite_pickaxe_trident 1",
            "playsound random.pop @p"
          ]
        }
      }
    }
  }
}