{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.fly_pegasus": {
			"initial_state": "falling",
			"states": {
				"falling": {
					"on_entry": [
						"/effect @e[type=mc:pegasus,r=1,c=1] levitation 0"
					],
					"transitions": [
						{ "rising": "query.is_jumping" }
					]
				},
				"rising": {
					"on_entry": [
						"/effect @e[type=mc:pegasus,r=1,c=1] levitation 100000 6 true"
					],
					"transitions": [
						{ "falling": "!query.is_jumping" }
					]
				}
			}
		}
	}
}