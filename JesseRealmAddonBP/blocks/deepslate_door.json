{
    "format_version": "1.16.100",
    "minecraft:block": {
        "description": {
            "identifier": "mc:deepslate_door",
            "properties": {
                "door:direction": [ 2, 3, 4, 5 ],
                "door:toggle": [true, false]
            }
        },
        "components": {
            "minecraft:material_instances": {
                "*": {
                    "texture": "deepslate",
                    "render_method": "opaque"
                }
            },
            "minecraft:creative_category": {
				"category": "construction",
				"group": "itemGroup.name.door"
            },

            "tag:door": {},
            "minecraft:pick_collision": {
                "origin": [-8, 0, -8],
                "size": [16, 16, 3]
            },
            "minecraft:entity_collision": {
                "origin": [-8, 0, -8],
                "size": [16, 16, 3]
            },
            "minecraft:loot": "loot_tables/blocks/deepslate_door_drop.json",
            "minecraft:geometry": "geometry.door.north",
            "minecraft:destroy_time": 2,
            "minecraft:breakonpush": true,
            "minecraft:preventsjumping": true,
            "minecraft:map_color": "#8A8A8E",
            "minecraft:on_player_placing": {
                "event": "facing_direction"
            },
            "minecraft:flammable": {
                "flame_odds": 0,
                "burn_odds": 0
            },
            "minecraft:block_light_emission": 0.0,
            "minecraft:block_light_absorption": 0.2
        },
        "events": {
            "facing_direction": {
                "sequence": [
                    {
                        "set_block_property": {
                            "door:direction": "(query.cardinal_facing_2d)"
                        }
                    },
                    {
                        "trigger": {
                            "event": "close_collision",
                            "target": "self"
                        }
                    }
                ]
            },
            "door_open": {
                "sequence": [
                    {
                        "set_block_property": {
                            "door:toggle": "query.block_property('door:toggle') ? false : true"
                        }
                    },
                    {
                        "run_command": {
                            "command": [ "playsound random.door_open @a[r=5] ~ ~ ~ 0.4 1.0" ]
                        }
                    },
                    {
                        "trigger": {
                            "event": "open_collision",
                            "target": "self"
                        }
                    }
                ]
            },
            "door_close": {
                "sequence": [
                    {
                        "set_block_property": {
                            "door:toggle": "query.block_property('door:toggle') ? false : true"
                        }
                    },
                    {
                        "run_command": {
                            "command": [ "playsound random.door_close @a[r=5] ~ ~ ~ 0.4 1.0" ]
                        }
                    },
                    {
                        "trigger": {
                            "event": "close_collision",
                            "target": "self"
                        }
                    }
                ]
            },
            "close_collision": {
                "sequence": [
                    {
                        "condition": "query.block_property('door:direction') == 2",
                        "set_block_at_pos": {
                            "block_type": "block:collision_block.south",
                            "block_offset": [ 0, 1, 0 ]
                        }
                    },
                    {
                        "condition": "query.block_property('door:direction') == 3",
                        "set_block_at_pos": {
                            "block_type": "block:collision_block.north",
                            "block_offset": [ 0, 1, 0 ]
                        }
                    },
                    {
                        "condition": "query.block_property('door:direction') == 4",
                        "set_block_at_pos": {
                            "block_type": "block:collision_block.east",
                            "block_offset": [ 0, 1, 0 ]
                        }
                    },
                    {
                        "condition": "query.block_property('door:direction') == 5",
                        "set_block_at_pos": {
                            "block_type": "block:collision_block.west",
                            "block_offset": [ 0, 1, 0 ]
                        }
                    }
                ]
            },
            "open_collision": {
                "sequence": [
                    {
                        "condition": "query.block_property('door:direction') == 2",
                        "set_block_at_pos": {
                            "block_type": "block:collision_block.west",
                            "block_offset": [ 0, 1, 0 ]
                        }
                    },
                    {
                        "condition": "query.block_property('door:direction') == 3",
                        "set_block_at_pos": {
                            "block_type": "block:collision_block.east",
                            "block_offset": [ 0, 1, 0 ]
                        }
                    },
                    {
                        "condition": "query.block_property('door:direction') == 4",
                        "set_block_at_pos": {
                            "block_type": "block:collision_block.south",
                            "block_offset": [ 0, 1, 0 ]
                        }
                    },
                    {
                        "condition": "query.block_property('door:direction') == 5",
                        "set_block_at_pos": {
                            "block_type": "block:collision_block.north",
                            "block_offset": [ 0, 1, 0 ]
                        }
                    }
                ]
            }
        },
        "permutations": [
            {
                "condition": "query.block_property('door:direction') == 2",
                "components": {
                    "minecraft:pick_collision": {
                        "origin": [-8, 0, 5],
                        "size": [16, 16, 3]
                    },
                    "minecraft:entity_collision": {
                        "origin": [-8, 0, 5],
                        "size": [16, 16, 3]
                    },
                    "minecraft:geometry":"geometry.door.south"
                }
            },
            {
                "condition":"query.block_property('door:direction') == 3",
                "components": {
                    "minecraft:pick_collision": {
                        "origin": [-8, 0, -8],
                        "size": [16, 16, 3]
                    },
                    "minecraft:entity_collision": {
                        "origin": [-8, 0, -8],
                        "size": [16, 16, 3]
                    },
                    "minecraft:geometry":"geometry.door.north"
                }
            },
            {
                "condition":"query.block_property('door:direction') == 4",
                "components": {
                    "minecraft:pick_collision": {
                        "origin": [-8, 0, -8],
                        "size": [3, 16, 16]
                    },
                    "minecraft:entity_collision": {
                        "origin": [-8, 0, -8],
                        "size": [3, 16, 16]
                    },
                    "minecraft:geometry": "geometry.door.east"
                }
            },
            {
                "condition":"query.block_property('door:direction') == 5",
                "components": {
                    "minecraft:pick_collision": {
                        "origin": [5, 0, -8],
                        "size": [3, 16, 16]
                    },
                    "minecraft:entity_collision": {
                        "origin": [5, 0, -8],
                        "size": [3, 16, 16]
                    },
                    "minecraft:geometry":"geometry.door.west"
                }
            },
            {
                "condition": "query.block_property('door:toggle') == false",
                "components": {
                    "minecraft:rotation": [0, 270, 0],
                    "minecraft:on_interact": {
                        "event": "door_close"
                    }
                }
            },
            {
                "condition": "query.block_property('door:toggle') == true",
                "components": {
                    "minecraft:rotation": [0, 0, 0],
                    "minecraft:on_interact": {
                        "event": "door_open"
                    }
                }
            }
        ]
    }
}