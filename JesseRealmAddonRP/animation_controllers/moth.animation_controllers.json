{
	"format_version" : "1.17.30",
	"animation_controllers" : {
		"controller.animation.moth.move" : {
			"initial_state" : "flying",
			"states" : {
				"flying" : {
					"animations" : [ 
						{ "flying": "!query.is_on_ground"} 
					],
					         "transitions": [
							{"resting" : "query.is_on_ground"}
					]
				},
				"resting" : {
					"animations" : [ "resting" ],
					"transitions" : [
						{
							"flying" : "!query.is_on_ground"
						}
					]
				}
			}
		}
	}
}